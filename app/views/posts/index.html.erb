<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<div class="box">	
	<div class="small_box">1</div>
	<div class="small_box">2</div>
	<div class="small_box">3</div>
</div>

<style>
	.box {
		border: 1px solid black;
		margin-top:10px;
		margin-left:10px;
		width:90%;
	}
	
	.small_box {
		width:150px;
		height:100px;
		display: inline;
		border: 1px solid black;
	}
</style>